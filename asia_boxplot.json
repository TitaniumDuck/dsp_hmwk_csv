{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",

  "data": {
  "url": "https://raw.githubusercontent.com/TitaniumDuck/dsp_hmwk_csv/refs/heads/main/DSP_HMWK_04_DATA.csv",
  "format": {"type": "csv"}},
  
  "title":
  {
    "text": "Asain GDP Per Capita (x 1,000,000)",
    "anchor": "middle",
    "fontSize": 16
  }, 

  "mark": "boxplot",

  "transform": 
  [
    {"filter": "datum.inAsia == 1"},
    {"calculate": "datum['GDP per Capita'] * 1000000",
    "as": "GDP_SCALED"}
  ],

  "encoding": 
  {
    "x": {"field": "Continent", "type": "nominal"},
    "y": {"field": "GDP_SCALED", "type": "quantitative"}
  }
}
